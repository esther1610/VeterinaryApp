<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_admin"
    app:startDestination="@id/home_f">

    <fragment
        android:id="@+id/home_f"
        android:name="cat.copernic.veterinaryapp.administrador.home"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_f_to_edit_usr"
            app:destination="@id/edit_usr" />
    </fragment>
    <fragment
        android:id="@+id/change"
        android:name="cat.copernic.veterinaryapp.Change"
        android:label="fragment_change"
        tools:layout="@layout/fragment_change" />
    <fragment
        android:id="@+id/ver_perfil"
        android:name="cat.copernic.veterinaryapp.ver_perfil"
        android:label="fragment_ver_perfil"
        tools:layout="@layout/fragment_crear_perfil" >
        <action
            android:id="@+id/action_ver_perfil_to_change"
            app:destination="@id/change" />
    </fragment>
    <fragment
        android:id="@+id/edit_usr"
        android:name="cat.copernic.veterinaryapp.administrador.Edit_usr"
        android:label="fragment_edit_usr"
        tools:layout="@layout/fragment_edit_usr" />
    <fragment
        android:id="@+id/crea_pregunta"
        android:name="cat.copernic.veterinaryapp.administrador.crea_pregunta"
        android:label="fragment_crea_pregunta"
        tools:layout="@layout/fragment_crea_pregunta" />
    <fragment
        android:id="@+id/edit_perfil"
        android:name="cat.copernic.veterinaryapp.edit_perfil"
        android:label="fragment_edit_perfil"
        tools:layout="@layout/fragment_edit_perfil" />
</navigation>